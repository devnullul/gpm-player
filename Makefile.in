PREFIX = @@prefix@@

.PHONY: all clean install uninstall distclean dist-clean

all:
	mkdir -p build && cd build && qmake ../gpm-player.pro -spec linux-g++
	make -C build

clean:
	rm -rf build

install:
	mkdir -p ${PREFIX}/bin
	cp build/gpm-player ${PREFIX}/bin
	cp gpm-player.icon /usr/share/icons
	cp gpm-player.desktop /usr/share/applications

uninstall:
	rm -f ${PREFIX}/bin/gpm-player

distclean: clean
	rm Makefile

dist-clean: distclean
