#!/bin/sh

set -e

# Defaults
PREFIX="/usr/local"

for i in "$@"; do
	case $i in
		--prefix=*)
			PREFIX="${i#*=}"
			;;
		--help | -h)
cat <<EOF
gpm-player configuration program.

Available options:

    --prefix=PATH      Specifies the path where gpm-player will be
                       installed to.
                       (default: /usr/local)

    --help             Shows this help.

EOF
			exit 0
			;;
		*)
			printf "Unknown option: $i\n"
			exit 1
			;;
	esac
done

cp Makefile.in Makefile
cp discord-player.desktop.in discord-player.desktop

sed -i "s|@@prefix@@|$PREFIX|g" Makefile
sed -i "s|@@prefix@@|$PREFIX|g" discord-player.desktop
printf "Prefix: $PREFIX\n"

exit 0
